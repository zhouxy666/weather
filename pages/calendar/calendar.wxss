@import '/template/cale/cale.wxss';
.container{
    color:#111;
    font-family: '楷体';
    padding:10rpx;
    width:730rpx;
}
.head{
    width:100%;
    padding:20rpx 40rpx 20rpx 40rpx;
}
.head image{
    width:50rpx;
    height:50rpx;
    margin-left:30rpx;
    margin-right:30rpx;
    vertical-align: middle;
    float:left;
}
.head text{
    vertical-align: middle;
    margin-top:13rpx;
    margin-right:50rpx;
    float:right;
}

.head .head-picker{
    float:right;
}
.week{
    margin-top:10rpx;
    width:100%;
    padding-left:10rpx;
}
.week .week-item{
    /*background:#ccc;*/
    width:90rpx;
    height:40rpx;
    margin-right:15rpx;
    text-align: center;
    float:left;
}
.week .week-item:nth-child(7){
    margin-right: 0rpx;
}
.line{
    width:100%;
    padding:0 10rpx;
    height: 1rpx;
    background:#999;
    margin:10rpx 0 30rpx 0;
}
